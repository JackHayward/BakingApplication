<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tablet_recipe_details"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_ingredients_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_steps_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/step_player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/step_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/step_player_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/previous_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/step_player_layout"
        app:layout_constraintTop_toBottomOf="@id/step_instruction"
        android:text="@string/previous_step"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/step_player_layout"
        app:layout_constraintTop_toBottomOf="@id/step_instruction"
        android:text="@string/next_step"/>
  </LinearLayout>
</LinearLayout>